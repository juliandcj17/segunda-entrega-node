{{>header}}
<h1 class="center-align">Crear un Curso Nuevo</h1>
<div class="container">
    <div class="row">
        <form class="col s12 m12" action="/crearcurso" method="POST" name="/crearCurso">
            <div class="row">
                <div class="container">
                    <div class="input-field col s12 m12">
                        <input id="id" type="number" class="validate" name="id">
                        <label for="id">ID del curso</label>
                    </div>
                    <div class="input-field col s12 m12">
                        <input id="nombre" type="text" class="validate" name="nombre">
                        <label for="nombre">Nombre</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="container">
                    <div class="input-field col s12 m12 ">
                        <input id="duracion" type="number" class="validate" name="duracion">
                        <label for="duracion">Duracion</label>
                    </div>
                    <div class="input-field col s12 m12">
                        <input id="precio" type="number" class="validate" name="valor">
                        <label for="precio">Precio</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container text-align: center">
                    <button class="btn waves-effect green lighten-1 " type="submit" 
                        name="send">Agregar aqui
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>
{{>footer}}